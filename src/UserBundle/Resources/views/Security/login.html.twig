{% trans_default_domain 'FOSUserBundle' %}
{% extends 'UserBundle::layout.html.twig' %}
{% block fos_user_content %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="loginForm form">
        <fieldset class="borderForm">
            <p class="formTitle">Se connecter</p>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            <div class="inputBlock">
                <label for="username" class="loginFirstLabel">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" {% if error %}class="inputTxtError" {% endif %}
                       value="{{ last_username }}"
                       required="required"/><br><br>
            </div>
            <div class="inputBlock">
                <label for="password">{{ 'security.login.password'|trans() }}</label>
                <input type="password" id="password" name="_password" {% if error %}class="inputTxtError" {% endif %}
                       required="required"/><br><br>
            </div>
            <div class="inputBlock">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br><br>
            </div>

            {% if error %}
                <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <input type="submit" id="_submit" class="button inputLogin" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
            <p class="signUp">Vous n'avez pas de compte ? <a href="/register">S'inscire</a></p>
        </fieldset>
    </form>
{% endblock fos_user_content %}
